{
    // 한글 출력을 위해서 UTF-8로 설정한 것이다. 
    // 또한 파일을 읽기 위해서 
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format


    "version": "2.0.0",

    "tasks": [

        {

            "label": "python execute",

            "type": "shell",

            "command": "python",

            "options": {

                "cwd": "${fileDirname}"

            },

            "args": [

                "${file}"

            ],

            "group":{

                "kind": "build",

                "isDefault": true

            },

            "presentation": {

                "echo": true,

                "reveal": "always",

                "focus": false,

                "panel": "shared",

                "showReuseMessage": true,

                "clear": true

            }

        },

    

        {

            "label": "c execute",

            "type": "shell",

            "command": "./${fileBasenameNoExtension}",

            "group":{

                "kind": "test",

                "isDefault": true

            },

            "presentation": {

                "echo": true,

                "reveal": "always",

                "focus": false,

                "panel": "shared",

                "showReuseMessage": true,

                "clear": true

            }

        }

    ]

}